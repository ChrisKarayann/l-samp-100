{
  "productName": "LSAMP-100",
  "version": "1.0.0",
  "identifier": "com.lsamp.conductor",
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../dist/midi-sampler/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Liturgy Audio Tools | L-SAMP 100",
        "width": 1252,
        "height": 736,
        "resizable": false,
        "maximizable": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb",
      "nsis",
      "dmg"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}